<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeTable.View.NewTaskPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                <Label>Nombre</Label>
                <Entry x:Name="NameEntry" HorizontalOptions="FillAndExpand"></Entry>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                <Label>Fecha de entrega</Label>
                <DatePicker x:Name="DueDatePicker" HorizontalOptions="FillAndExpand"></DatePicker>
            </StackLayout>
            <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
                <Label>Notas</Label>
                <Editor x:Name="NotesEditor" VerticalOptions="FillAndExpand"></Editor>
            </StackLayout>
            <Button Text="Guardar" x:Name="SaveButton" Clicked="SaveButton_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>