<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeTable.View.TaskListPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView 
                HasUnevenRows="True"
                x:Name="TaskListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout BackgroundColor="BlueViolet" Padding="5, 20" Orientation="Vertical">
                                <Label Text="{Binding Name}" Font="18"></Label>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>